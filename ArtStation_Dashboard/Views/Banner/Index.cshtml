
@model PagedResult<ArtStation.Core.Entities.Banner>
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var dir = culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
    var lang = culture.Name;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-primary alert-dismissible text-white fade show" role="alert">
        <span class="alert-icon align-middle">
            <span class="material-symbols-rounded text-md">
               
            </span>
        </span>
        <span class="alert-text"><strong>@TempData["SuccessMessage"]!</strong>  </span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<div class="container-fluid py-4">
    <button class="btn btn-icon btn-3 btn-primary" type="button">
        <span class="btn-inner--icon"><i class="fa-solid fa-plus"></i></span>
        <span class=""><a asp-action="AddBanner" asp-controller="Banner">@(("أضف لوحة", "Add Banner").Localize(lang))</a></span>
    </button>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3 pe-3">@(("اللوحات", "Banners").Localize(lang))</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <form id="antiForgeryForm" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>

                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@(("صوره اللوحة", "Banner Image").Localize(lang))</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("عنوان اللوحة", "Banner Title").Localize(lang))</th>
                                  
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("ترتيب اللوحة", "Banner Order").Localize(lang))</th>
                 
                                   
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Count()>0)
                                {
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                              
                                                    <div>
                                                        <img src="~/Uploads/Banners/@item.ImageUrl" class="avatar avatar-sm me-3 ms-3 border-radius-lg" alt="user1">
                                                    </div>
                                                   
                                               
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Title</p>
                                                @* <p class="text-xs text-secondary mb-0">Organization</p> *@
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-success">@item.OrderBanner</span>
                                            </td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input type="checkbox"
                                                           class="form-check-input toggle-active"
                                                           data-id="@item.Id"
                                                           id="toggle_@item.Id"
                                                    @(item.IsActive ? "checked=\"checked\"" : "") />


                                                    <label class="form-check-label" for="toggle_@item.Id">
                                                        @(item.IsActive ? ("مفعل", "Active").Localize(lang) : ("غير مفعل", "Inactive").Localize(lang))
                                                    </label>
                                                </div>
                                            </td>



                                            <td class="align-middle">
                                                <div class="dropdown">
                                                    <button class="btn bg-gradient-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                        @(("العمليات", "Actions").Localize(lang))
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <li><a class="dropdown-item" asp-action="Details" asp-controller="Banner"  asp-route-id="@item.Id">@(("تفاصيل", "Details").Localize(lang))</a></li>
                                                        <li><a class="dropdown-item" asp-action="Edit" asp-controller="Banner" asp-route-id="@item.Id">@(("تعديل", "Edit").Localize(lang))</a></li>
                                                        <li><a class="dropdown-item" asp-action="Delete" asp-controller="Banner" asp-route-id="@item.Id">@(("خذف", "Delete").Localize(lang))</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
<nav aria-label="Page navigation">
    <ul class="pagination pagination-primary pagination-sm justify-content-center">
        @for (int i = 1; i <= @Model.TotalPages; i++)
        {
            var isActive = (i == @Model.PageNumber) ? "active" : "";
            <li class="page-item @isActive">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }
    </ul>
</nav>
@section Scripts {
    
    <script>
      
            $(document).on("change", ".toggle-active", function () {
           

            var checkbox = $(this);
            var id = checkbox.data("id");
            var isActive = checkbox.is(":checked");

            $.ajax({
                url: '/Banner/ToggleActive',
                type: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                data: {
                    id: id,
                    isActive: isActive
                },
                success: function () {
                    var label = checkbox.closest('.form-check').find('label');
                    label.text(isActive ? "مفعل" : "غير مفعل");
                },
                error: function () {
                    alert("حدث خطأ أثناء تحديث حالة التفعيل.");
                    checkbox.prop("checked", !isActive);
                }
            });
        });
    </script>
}


