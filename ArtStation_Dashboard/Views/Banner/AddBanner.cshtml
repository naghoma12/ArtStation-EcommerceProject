
@model ArtStation_Dashboard.ViewModels.BannerVM
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
   
    var language = culture.Name;
}
<div class="m-auto bg-white p-5">
    <h1>@(("اضف لوحة", "Add New Banner").Localize(language))</h1>

    <hr />
    <form asp-action="AddBanner" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">

            <!-- Banner Title -->
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">@(("عنوان اللوحه", "Banner Title").Localize(language))</label>
                    <input asp-for="Title" type="text" class="form-control" />
                </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Banner Order -->
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">@(("ترتيب اللوحه", "Banner Order").Localize(language))</label>
                    <input asp-for="OrderBanner" type="number" class="form-control" min="1" />
                </div>
                    <span asp-validation-for="OrderBanner" class="text-danger"></span>
            </div>

            <!-- Banner Image -->
            <div class="col">
                <div class="input-group input-group-outline my-3">
                    <label class="control-label fs-7">
                        @(("صوره اللوحه", "Banner Image").Localize(language))
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-image"></i>
                        </span>
                        <input asp-for="Photo"
                               type="file"
                               class="form-control form-control-lg"
                               id="formFile"
                               accept="image/*" />
                    </div>
                    <span asp-validation-for="Photo" class="text-danger mt-1"></span>
                </div>
            </div>

            <!-- Is Active -->
            <div class="col-12 mt-3">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch" />
                    <label class="form-check-label" for="isActiveSwitch">
                        @(("نشط", "Active").Localize(language))
                    </label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

        </div>

        <!-- Submit & Back -->
        <div class="form-group mt-4">
            <input type="submit" value="@(("اضافة", "Add").Localize(language))" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light ms-2">
                @(language == "en" ? "Back to List" : "العودة إلى القائمة")
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}