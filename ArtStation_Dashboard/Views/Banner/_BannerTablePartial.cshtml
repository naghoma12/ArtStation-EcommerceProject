@model PagedResult<ArtStation.Core.Entities.Banner>
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var dir = culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
    var lang = culture.Name;
}

<div class="table-responsive">
    <table class="table align-items-center mb-0 w-100">
        <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@(("صوره اللوحة", "Banner Image").Localize(lang))</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("عنوان اللوحة", "Banner Title").Localize(lang))</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("ترتيب اللوحة", "Banner Order").Localize(lang))</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("هل مفعل", "IsActive").Localize(lang))</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@(("تاريخ الإنشاء", "Created Date").Localize(lang))</th>
                <th class="text-secondary opacity-7"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr style="cursor:pointer;" onclick="handleRowClick(event, '@Url.Action("Details", "Banner", new { id = item.Id })')">
                        <td><img src="~/Uploads/Banners/@item.ImageUrl" class="avatar avatar-sm me-3 ms-3 border-radius-lg" alt="banner"></td>
                        <td><p class="text-xs font-weight-bold mb-0">@item.Title</p></td>
                        <td class="align-middle text-center text-sm"><span class="badge badge-sm bg-gradient-success">@item.OrderBanner</span></td>
                        <td>
                            <div class="form-check form-switch">
                                <input type="checkbox" class="form-check-input toggle-active" data-id="@item.Id" id="toggle_@item.Id" @(item.IsActive ? "checked" : "") />
                                <label class="form-check-label" for="toggle_@item.Id">
                                    <span id="label-status-@item.Id" class="@(item.IsActive ? "text-success" : "text-danger")">
                                        @(item.IsActive ? ("مفعل", "Active").Localize(lang) : ("غير مفعل", "Inactive").Localize(lang))
                                    </span>
                                </label>
                            </div>
                        </td>
                        <td class="align-middle text-center text-sm">@item.CreatedDate</td>
                        <td class="align-middle">
                            <div class="dropdown">
                                <button class="btn bg-gradient-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">@(("العمليات", "Actions").Localize(lang))</button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Details" asp-controller="Banner" asp-route-id="@item.Id">@(("تفاصيل", "Details").Localize(lang))</a></li>
                                    <li><a class="dropdown-item" asp-action="Edit" asp-controller="Banner" asp-route-id="@item.Id">@(("تعديل", "Edit").Localize(lang))</a></li>
                                    <li><button class="dropdown-item btn-delete" data-id="@item.Id">@(("خذف", "Delete").Localize(lang))</button></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6" class="text-center text-muted py-3">@(("لا توجد بيانات", "No data available").Localize(lang))</td></tr>
            }
        </tbody>
    </table>
</div>

