@using ArtStation.Core.Entities.Order

@using NuGet.Protocol
@model PagedResult<Order>

@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var dir = culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
    var lang = culture.Name;
}

<form method="get" action="@Url.Action("CompanyOrder", "YourControllerName")" class="d-flex justify-content-center my-3">
    <label class="form-label me-2">@(("بحث", "Search").Localize(lang))</label>
    <div class="input-group input-group-outline my-3 w-50">
        <input type="number" name="search" value="@ViewBag.Search" placeholder="@(("  ابحث رقم الطلب ", "Search With Order Number").Localize(lang))" class="form-control w-auto mx-1" />
        <input type="hidden" name="statusFilter" value="@ViewBag.StatusFilter" />
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
    </div>
</form>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">

                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3 pe-3">@(("الطلبات", "Orders").Localize(lang))</h6>
                    </div>
                </div>
                <form id="antiForgeryForm" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>


                <div class="card-body px-0 pb-2">
                    <div id="order-table-container">
                        <div class="table-responsive">
                            <div id="companyorder-table-container">
                                @Html.Partial("_CompanyOrderTable", Model)
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<n<nav aria-label="Page navigation">
    <ul class="pagination pagination-primary pagination-sm justify-content-center">
            @for (int i = 1; i <=Model.TotalPages; i++)
            {
                var isActive = (i == Model.PageNumber) ? "active" : "";
                <li class="page-item @isActive">
                            <a class="page-link" href="@Url.Action("CompanyOrder", new { page = i, pageSize = Model.PageSize,statusFilter = ViewBag.StatusFilter })">@i</a>

                </li>
            }
    </ul>
</nav>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
          $(document).ready(function () {
        $('#searchInput').on('input', function () {
            let searchValue = $(this).val();

            $.ajax({
                url: '@Url.Action("CompanyOrder", "Order")',
                type: 'GET',
                data: {
                    search: searchValue,
                    statusFilter: '@ViewBag.StatusFilter',
                    page: 1,
                    pageSize: '@Model.PageSize'
                },
                success: function (result) {
                    $('#companyorder-table-container').html(result);
                }
            });
        });
    });


             function handleRowClick(event, url) {
                    // Get the tag name of what was clicked
                    const tag = event.target.tagName.toLowerCase();

                    // Ignore clicks on inputs, selects, buttons, and links
                    if (tag === 'input' || tag === 'select' || tag === 'button' || tag === 'a') {
                        return;
                    }

                    // Otherwise, navigate
                    window.location = url;
                }
    </script>
}