@model CategoryWithProducts

@{
    var language = ViewData["Language"] as string ?? "en";
    ViewData["Title"] = ("تفاصيل التصنيف" , "Category Details").Localize(language);
}
<div class="container py-5 ">
    <div class="card shadow-lg rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5">
                <div class="h-100" style="min-height: 300px; max-height: 300px; overflow: hidden;">
                    <img src="~/Uploads/Categories/@Model.Image"
                         class="img-fluid w-100 h-100 object-fit-cover"
                         alt="@Model.Name"
                         style="object-fit: cover; border-radius: 10px" />
                </div>
            </div>
            <div class="col-md-7">
                <div class="card-body p-5">
                    <h2 class="card-title mb-3">@Model.Name</h2>

                    <ul class="list-group list-group-flush mt-4">
                        <li class="list-group-item"><strong>@(language == "en" ? "ID" : "المعرف"):</strong> @Model.Id</li>
                    </ul>

                    <div class="mt-5">
                        <a asp-action="Index" class="btn btn-outline-primary">
                            @(language == "en" ? "Back to List" : "العودة إلى القائمة")
                        </a>
                    </div>
                </div>
            </div>
        </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card my-4">
                                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 pe-3">
                                        <h6 class="text-white text-capitalize ps-3">@(("منتجات التصنيف", "Products Of Category").Localize(language))</h6>
                                    </div>
                                </div>
                                <div class="card-body px-0 pb-2">
                                    <div class="table-responsive p-0">
                                        <table class="table align-items-center mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center ">
                                                        @(("المعرف", "Id").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("اسم المنتج", "Product Name").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center ">
                                                        @(("الماركة", "Brand").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("السعر الأصلي", "Original Price").Localize(language))
                                                    </th>
                                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("السعر بعد الخصم", "SalePrice").Localize(language))
                                                    </th>
                                                    <th class="text-secondary opacity-7"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var product in Model.Products)
                                                {
                                                    <tr>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Id</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Name</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Brand</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.TotalPrice</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.PriceAfterSale</span>
                                                        </td>
                                                        
                                                        <td class="align-middle text-center">
                                                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                                @(("تفاصيل", "Details").Localize(language))
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</div>