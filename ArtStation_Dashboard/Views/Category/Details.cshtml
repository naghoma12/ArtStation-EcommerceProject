@model CategoryProductsPagination

@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var language = culture.Name;
    ViewData["Title"] = ("تفاصيل التصنيف" , "Category Details").Localize(language);
}
<div class="d-flex justify-content-between align-items-center my-4 ms-4 me-5">
    <h1 class="fw-bold mb-0">
        @(("تفاصيل التصنيف", "Category Details").Localize(language))
    </h1>
    <div class="d-flex gap-2">
        <!-- Dropdown Actions -->
        <div class="dropdown">
            <button class="btn bg-gradient-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                @(("العمليات", "Actions").Localize(language))
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" asp-action="Details" asp-controller="Category" asp-route-id="@Model.Id">
                        @(("تفاصيل", "Details").Localize(language))
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id">
                        @(("تعديل", "Edit").Localize(language))
                    </a>
                </li>

                <li><a class="dropdown-item" asp-action="Delete" asp-controller="Category" asp-route-id="@Model.Id">@(("حذف", "Delete").Localize(language))</a></li>

            </ul>
        </div>

        <!-- Back Button -->
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fa fa-arrow-left me-1"></i>
            @(language == "en" ? "Back to List" : "العودة إلى القائمة")
        </a>
    </div>
</div>
<style>
    .clickable-row:hover {
        background-color: #f5f5f5;
    }
</style>

<div class="container ">
    <div class="card shadow-lg rounded-4 overflow-hidden">

        <div class="row g-0">
            <div class="col-md-5">
                <div class="h-100" style="min-height: 300px; max-height: 300px; overflow: hidden;">
                    <img src="~/Uploads/Categories/@Model.Image"
                         class="img-fluid w-100 h-100 object-fit-cover"
                         alt="@Model.Name"
                         style="object-fit: cover; border-radius: 10px" />
                </div>
            </div>
            <div class="col-md-7 position-relative">
                <div class="card-body p-5">
                    
                    <h2 class="card-title mb-3">@Model.Name</h2>

                    <ul class="list-group list-group-flush mt-4">
                        <li class="list-group-item">
                            <strong>@(language == "en" ? "ID" : "المعرف"):</strong> @Model.Id
                        </li>
                    </ul>
                </div>
            </div>
            </div>

        <div class="container-fluid py-4">
            <a asp-action="Create" asp-controller="Product" asp-route-categoryId="@Model.Id" class="btn btn-icon btn-3 btn-primary">
                <i class="fa-solid fa-plus"></i>
                @(("أضف منتج", "Add Product").Localize(language))
            </a>
            <div class="row ">
                        <div class="col-12">
                            <div class="card my-4">
                                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 pe-3">
                                        <h6 class="text-white text-capitalize ps-3">@(("منتجات التصنيف", "Products Of Category").Localize(language))</h6>
                                    </div>
                                </div>
                                <div class="card-body px-0 pb-2">
                                    <div class="table-responsive p-0">
                                        <table class="table align-items-center mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center ">
                                                        @(("المعرف", "Id").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("اسم المنتج", "Product Name").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center ">
                                                        @(("الماركة", "Brand").Localize(language))
                                                    </th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("السعر الأصلي", "Original Price").Localize(language))
                                                    </th>
                                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">
                                                        @(("السعر بعد الخصم", "SalePrice").Localize(language))
                                                    </th>
                                                    <th class="text-secondary opacity-7"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var product in Model.ProductsPaged.Items)
                                                {
                                            <tr class="clickable-row" data-url="/Product/Details/@product.Id" style="cursor: pointer;">
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Id</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Name</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Brand</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.Price</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@product.PriceAfterSale</span>
                                                        </td>
                                                        
                                                        <td class="align-middle text-center">
                                                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                                @(("تفاصيل", "Details").Localize(language))
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        @if (Model.ProductsPaged.TotalPages > 1)
        {
            <nav class="mt-4" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.ProductsPaged.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.ProductsPaged.PageNumber ? "active" : "")">
                            <a class="page-link"
                               asp-action="Details"
                               asp-route-id="@Model.Id"
                               asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

        </div>
    </div>
    @section Scripts{
        <script>
                    function bindClickableRows() {
                const rows = document.querySelectorAll(".clickable-row");
                rows.forEach(row => {
                    row.addEventListener("click", function (e) {
                        // Prevent click if the target is a link or a checkbox
                        if (e.target.closest('a') || e.target.type === 'checkbox') {
                            return;
                        }

                        const url = this.getAttribute("data-url");
                        if (url) {
                            window.location.href = url;
                        }
                    });
                });
            }
             bindClickableRows();
        </script>
        
    }