@using ArtStation_Dashboard.ViewModels.User

@model TraderViewModel
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
   
    var lang = culture.Name;
}
<section>
    <div class="page-header ">
        <div class="container">
            <div class="row">
              
                <div class="col-xl-7 col-lg-6 col-md-8 d-flex flex-column m-auto ">
                    <div class="card card-plain">
                        <div class="card-header">
                            <h4 class="font-weight-bolder">Add New Trader Account </h4>
                            <p class="mb-0"></p>
                        </div>
                        <div class="card-body">
                            <form role="form" asp-action="AddTrader" method="post" enctype="multipart/form-data">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="UserName" class="form-label">@(("اسم المستخدم", "User Name").Localize(lang))</label>
                                    <input asp-for="UserName" type="text" class="form-control">
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label"> @(("اسم الشركة", "Company Name").Localize(lang))</label>
                                    <input asp-for="DispalyName" type="text" class="form-control">
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">@(("الايميل", "Email").Localize(lang))</label>
                                    <input asp-for="Email" class="form-control">
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">@(("رقم الموبايل", "Phone Number").Localize(lang)) </label>
                                    <input asp-for="PhoneNumber" class="form-control">
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">@(("الجنسيه", "Nationality").Localize(lang))</label>
                                    <input asp-for="Nationality" class="form-control">
                                </div>
                               
                                
                                <div class="form-group form-control input-group input-group-outline mb-3">
                                    <label class="form-label fw-bold fs-2">@(("الصوره الشركه", "Company Logo").Localize(lang))</label>
                                    <input asp-for="PhotoFile" class="form-control " type="file" id="formFile" />
                                </div>
                                <select asp-for="City" class="form-control form-select-lg input-group-outline mb-3" aria-label="Large select example"
                                        asp-items="@(Model.Cities != null ?new SelectList(Model.Cities,"City","City"): new SelectList(""))">
                                    <option value="0">Select a City</option>
                                </select>


                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">@(("كلمه السر", "Password").Localize(lang))</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                </div>
                              
                              
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Add Trader Account</button>
                                </div>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>