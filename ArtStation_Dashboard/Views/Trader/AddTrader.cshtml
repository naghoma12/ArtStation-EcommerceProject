@using ArtStation_Dashboard.ViewModels.User

@model TraderViewModel
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
   
    var lang = culture.Name;
    bool isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    string iconPositionClass = isRtl ? "start-0 ms-3" : "end-0 me-3";
}
<section>
    <div class="page-header ">
        <div class="container">
            <div class="row">
              
                <div class="col-xl-9 col-lg-6 col-md-8 d-flex flex-column m-auto ">
                    <div class="card card-plain">
                        <div class="card-header">
                            <h4 class="font-weight-bolder">@(("اضف حساب جديد لشركه", "Add New Company Account").Localize(lang)) </h4>
                            <p class="mb-0"></p>
                        </div>


                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form role="form" asp-action="AddTrader" method="post" enctype="multipart/form-data">
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="UserName" class="form-label">@(("اسم المستخدم", "User Name").Localize(lang))</label>
                                    <input asp-for="UserName" type="text" class="form-control">
                                    <br />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="DispalyName" class="form-label"> @(("اسم الشركة", "Company Name").Localize(lang))</label>
                                    <input asp-for="DispalyName" type="text" class="form-control">
                                    <br />
                                    <span asp-validation-for="DispalyName" class="text-danger"></span>
                                </div> 
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="Email" class="form-label">@(("الايميل", "Email").Localize(lang))</label>
                                    <input asp-for="Email"  class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">@(("رقم الموبايل", "Phone Number").Localize(lang)) </label>
                                    <input asp-for="PhoneNumber" type="text" class="form-control">
                                    <br />
                                    
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">@(("الجنسيه", "Nationality").Localize(lang))</label>
                                    <input asp-for="Nationality" type="text" class="form-control">
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>
                               
                                
                                <div class="form-group form-control input-group input-group-outline mb-3">
                                    <label class="form-label ">@(("صوره الشركه", "Company Logo").Localize(lang))</label>
                                    <input asp-for="PhotoFile" class="form-control " type="file" id="formFile" />
                                    <span asp-validation-for="PhotoFile" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3"> 
                                <select asp-for="City" class="input-group input-group-outline mb-3 " aria-label="Large select example"
                                        asp-items="@(Model.Cities != null ?new SelectList(Model.Cities,"City","City"): new SelectList(""))">
                                    <option value=" ">Select a City</option>

                                </select>
                               </div> 

                                @* <div class="input-group input-group-outline mb-3 position-relative"> *@
                                @*     <label class="form-label">@(("كلمه السر", "Password").Localize(lang))</label> *@
                                @*     <input asp-for="Password" type="password" class="form-control" id="passwordInput"> *@
                                @*     <span class="position-absolute end-0 top-50 translate-middle-y me-3" *@
                                @*           style="cursor: pointer;" id="togglePassword"> *@
                                @*         <i class="fa fa-eye" id="eyeIcon"></i> *@
                                @*     </span> *@
                                @* </div> *@
                                @* <span asp-validation-for="Password" class="text-danger"></span> *@

                                <div class="input-group input-group-outline mb-3 position-relative">
                                    <label class="form-label">@(("كلمه السر ", " Password").Localize(lang))</label>
                                    <input asp-for="Password" type="password" class="form-control" id="newPasswordInput" />
                                    <span class="position-absolute start-0 top-50 translate-middle-y me-3" style="cursor: pointer;" id="toggleNewPassword">
                                        <i class="fa fa-eye" id="eyeIconNew"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>


                                <div class="form-check form-switch mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label" for="isActiveSwitch">@(("نشط", "Active").Localize(lang))</label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>



                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">@(("اضف حساب جديد", "Add New Account").Localize(lang))</button>
                                </div>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


                            @section Scripts{
                                <script>
                                     document.addEventListener("DOMContentLoaded", function () {
            function setupPasswordToggle(toggleId, inputId, iconId) {
                const passwordInput = document.getElementById(inputId);
                const togglePassword = document.getElementById(toggleId);
                const eyeIcon = document.getElementById(iconId);

                togglePassword.addEventListener("click", function () {
                    const isPassword = passwordInput.type === "password";
                    passwordInput.type = isPassword ? "text" : "password";
                    eyeIcon.classList.toggle("fa-eye");
                    eyeIcon.classList.toggle("fa-eye-slash");
                });
            }

            setupPasswordToggle("toggleNewPassword", "newPasswordInput", "eyeIconNew");
          
        });
                                </script>
                            }