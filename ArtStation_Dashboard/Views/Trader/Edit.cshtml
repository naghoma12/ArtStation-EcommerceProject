@using ArtStation_Dashboard.ViewModels.User
@model TraderViewModel
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var dir = culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
    var lang = culture.Name;
}
<div class="m-auto  bg-white p-5">
    <h1>@(("تعديل بيانات الشركة", "Edit Company Data").Localize(lang))</h1>


    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <input asp-for="Photo" hidden />

        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("اسم المستخدم", "Username").Localize(lang))</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("الاسم المعروض", "Display Name").Localize(lang))</label>
                    <input asp-for="DispalyName" class="form-control" />
                </div>
                <span asp-validation-for="DispalyName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("البريد الإلكتروني", "Email").Localize(lang))</label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("رقم الهاتف", "Phone Number").Localize(lang))</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("المدينة", "City").Localize(lang))</label>
                    <select asp-for="City" class="form-control"
                            asp-items="@(new SelectList(Model.Cities, "City", "City", Model.City))">
                        <option value="">@(("اختر المدينة", "Select a City").Localize(lang))</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("الجنسية", "Nationality").Localize(lang))</label>
                    <input asp-for="Nationality" class="form-control" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="input-group input-group-static mb-4">
                    <label>@(("صورة المستخدم", "User Photo").Localize(lang))</label>
                    <div class="w-100">
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <img src="~/Uploads/Traders/@Model.Photo" alt="User Photo" width="100" class="mb-2" />
                        }
                        <input asp-for="PhotoFile" type="file" class="form-control" accept="image/*" />
                    </div>
                </div>
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="@(("تعديل", "Edit").Localize(lang))" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light ms-2">
                @(("العودة إلى القائمة", "Back to List").Localize(lang))
            </a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}