@using System.Globalization
@model ProductDetailsVM

@{
    var language = ViewData["Language"] as string ?? "en";
    ViewData["Title"] = ("تفاصيل المنتج", "Product Details").Localize(language);
    var backToList = language == "en" ? "Back to List" : "العودة إلى القائمة";

}

<partial name="PartialView/_DetailsDeleteView" />
<div class="mt-5">
    <a asp-action="Index" class="btn btn-outline-primary">@backToList</a>
</div>