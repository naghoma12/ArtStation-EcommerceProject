@using System.Globalization
@model ProductDetailsVM

@{
    var language = ViewData["Language"] as string ?? "en";
    ViewData["Title"] = ("تفاصيل المنتج", "Product Details").Localize(language);
    var backToList = language == "en" ? "Back to List" : "العودة إلى القائمة";

}
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-primary mt-3 mb-2 text-white">
        @TempData["message"]
    </div>
}
<partial name="PartialView/_DetailsDeleteView" />
<div class="mt-1 ms-3">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Index" class="btn btn-light text-primary ms-2">
            @(language == "en" ? "Back to List" : "العودة إلى القائمة")
        </a>
    }
    else
    {
        <a asp-action="GetTraderCategory" class="btn btn-light text-primary ms-2">
            @(language == "en" ? "Back to My Products" : "العودة إلى منتجاتي")
        </a>
    }
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
        @(("تعديل المنتج", "Edit Product").Localize(language)) </a>
</div>