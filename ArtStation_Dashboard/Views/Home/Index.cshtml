@using ArtStation.Core.Statistics
@using System.Globalization
@model StatisticsDTO
@{
    ViewData["Title"] = "Home Page";
    var culture = System.Globalization.CultureInfo.CurrentUICulture;

    var lang = culture.Name;
    var culture1 = lang == "ar" ? new CultureInfo("ar-EG") : CultureInfo.InvariantCulture;
    Func<decimal, string> formatPrice = price =>
        lang == "ar"
            ? price.ToString("C", culture1)
            : $"EGP {price.ToString("0.00")}";
    var dir = culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
}
<style>
    .chart {
        position: relative;
        width: 100% !important;
        height: 100% !important;
    }

    .chart-canvas {
        width: 100% !important;
        height: 100% !important;
    }
</style>
<div class="container-fluid py-4" >
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2" >
                    <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute" >
                        <i class="material-icons opacity-10">weekend</i>
                    </div>
                    <div class="text-end pt-1" >
                        <p class="text-sm mb-0 text-capitalize">@(("أموال اليوم", "Today's Money").Localize(lang))</p>
                        <h4 class="mb-0">@formatPrice(Model.DailyMoney)</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                </div>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-icons opacity-10">person</i>
                    </div>
                    <div class="text-end pt-1">
                            <p class="text-sm mb-0 text-capitalize">@(("عدد المستخدمين","Total Users").Localize(lang))</p>
                        <h4 class="mb-0">@Model.ApplicationUsersCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-icons opacity-10">person</i>
                    </div>
                    <div class="text-end pt-1">
                            <p class="text-sm mb-0 text-capitalize">@(("عدد الشركات", "Total Companies").Localize(lang))</p>
                        <h4 class="mb-0">@Model.CompaniesCount</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                </div>
            </div>
        </div>
            
        }
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-header p-3 pt-2">
                    <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                        <i class="material-icons opacity-10">weekend</i>
                    </div>
                    <div class="text-end pt-1">
                        <p class="text-sm mb-0 text-capitalize">@(("المبيعات اليوميه", "Daily Sales").Localize(lang))</p>
                        <h4 class="mb-0">@Model.dailySales.TodaySale</h4>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-3">
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 mt-5">
            <!-- Full width -->
            <div class="card z-index-2 h-100">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparent">
                    <div class="bg-gradient-success shadow-success border-radius-lg py-3 pe-1" style="height: 400px;">
                        <!-- Set height -->
                        <div class="chart h-100">
                            <canvas id="chart-line" class="chart-canvas"></canvas>
                        </div>
                    </div>
                </div>
                <div class="card-body " >
                    <h6 class="mb-0" style="font-size : x-large">@(("المبيعات اليوميه", "Daily Sales").Localize(lang))</h6>
                    <p class="text-md">
                        (<span class="font-weight-bolder">@Model.dailySales.Percentage.ToString("0.##")%</span>) @(("زياده في مبيعات اليوم","increase in today sales").Localize(lang)).
                    </p>
                    <hr class="dark horizontal">
                    <div class="d-flex">
                        <i class="material-icons text-sm my-auto me-1">schedule</i>
                        <p class="mb-0 text-md">@(("تم التعديل", "updated").Localize(lang)) @Model.dailySales.LastUpdated.ToString("h:mm tt")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
@section Scripts{
    <script>
        var salesData = @Html.Raw(Json.Serialize(Model.SalesData));
        
        var ctx2 = document.getElementById("chart-line").getContext("2d");
                new Chart(ctx2, {
            type: "line",
            data: {
                labels: ["Fri", "Sat", "Sun","Mon", "Tue", "Wed", "Thu"],
                datasets: [{
                    label: "Sales",
                    tension: 0,
                    pointRadius: 5,
                    pointBackgroundColor: "rgba(255, 255, 255, .8)",
                    pointBorderColor: "transparent",
                    borderColor: "rgba(255, 255, 255, .8)",
                    borderWidth: 4,
                    backgroundColor: "transparent",
                    fill: true,
                    data: salesData,
                    maxBarThickness: 6
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // Let it fill container
                plugins: { legend: { display: false } },
                interaction: { intersect: false, mode: 'index' },
                scales: {
                    y: {
                        grid: { drawBorder: false, color: 'rgba(255, 255, 255, .2)', borderDash: [5, 5] },
                        ticks: { color: '#f8f9fa', padding: 10, font: { size: 16, weight: 500 } }
                    },
                    x: {
                        grid: { drawBorder: false, display: false },
                        ticks: { color: '#f8f9fa', padding: 10, font: { size: 16, weight: 500 } }
                    }
                }
            },
                  interaction: {
            intersect: false,
            mode: 'index',
          },
          scales: {
            y: {
              grid: {
                drawBorder: false,
                display: true,
                drawOnChartArea: true,
                drawTicks: false,
                borderDash: [5, 5],
                color: 'rgba(255, 255, 255, .2)'
              },
              ticks: {
                display: true,
                color: '#f8f9fa',
                padding: 10,
                font: {
                  size: 14,
                  weight: 300,
                  family: "Roboto",
                  style: 'normal',
                  lineHeight: 2
                },
              }
            },
            x: {
              grid: {
                drawBorder: false,
                display: false,
                drawOnChartArea: false,
                drawTicks: false,
                borderDash: [5, 5]
              },
              ticks: {
                display: true,
                color: '#f8f9fa',
                padding: 10,
                font: {
                  size: 14,
                  weight: 300,
                  family: "Roboto",
                  style: 'normal',
                  lineHeight: 2
                },
              }
            },
          },
        
        });


    </script>
}